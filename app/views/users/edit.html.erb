 <h3>スケジュール編集</h3>
 <%= render "shared/error", obj: @user %>
 
 <%= form_with model: @user, local:true do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start_day ,"開始日" %></th>
       <td><%= f.date_field :start_day %></td>
     </tr>
 
     <tr>
       <th><%= f.label :finish_day , "終了日" %></th>
       <td><%= f.date_field :finish_day %></td>
     </tr>
 
     <tr>
       <th><%= f.label :free_check ,"終日" %></th>
       <td><%= f.check_box :free_check %><br>
       終日の場合はチェックをいれてください
       </td>
     </tr>
     
     <tr>
      <th><%= f.label :memo ,"メモ" %></th>
      <td><%= f.text_area :memo %></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "編集を完了する" %></li>
       <li><%= link_to "スケジュール一覧に戻る", :users %></li>
     </ul>
   </div>
 <% end %>